                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight=".6"
                            android:padding="10dp"

                            android:text="@string/coapplicant_text2" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight=".4"
                            android:background="@drawable/edittext_border"
                            android:paddingLeft="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_weight=".6"
                            android:padding="10dp"
                            android:text="@string/coapplicant_text3" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_weight=".4"
                            android:background="@drawable/edittext_border"
                            android:paddingLeft="4dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/letout_drawer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue"
                        android:padding="10dp"
                        android:text="@string/letout_property_heading"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/letout_hideout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="7dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:padding="3dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="@string/letout_property_heading_txt1" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text="@string/letout_property_heading_txt3" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:text="@string/letout_property_heading_txt4" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="@string/letout_property_txt1" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="@string/letout_property_heading_txt2" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="@string/rentRecieved_letout" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"

                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"

                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="@string/municipaltaxes_letout" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"

                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="@string/letout_netannualValue" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"

                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="@string/letout_lstd30per" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="@string/interestRepayment_letout" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="@string/preemi_letout" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="@string/letout_preemi1" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="@string/letout_preemi2" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />

                        <EditText
                            style="@style/letoutItems"
                            android:layout_width="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight=".3"
                            android:background="@drawable/edittext_border"
                            android:inputType="number"
                            android:paddingLeft="3dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        android:background="@color/blue"

        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/PESsaveBtn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/blue"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/submit"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/lopback"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/blue"
            android:text="@string/back"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>