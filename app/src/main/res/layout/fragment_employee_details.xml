<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/employeeDetailsFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EmployeeDetails">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
            <TableRow android:layout_margin="20dp">
                <TextView android:layout_weight=".5"
                    android:gravity="left"
                    android:text="Employee Details"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textColor="@color/white"
                    android:background="@color/orange"/>
            </TableRow>
            <TableRow
                android:layout_margin="10dp">

                <TextView
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="Employee Code :"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="1126"
                    android:textStyle="bold"
                    />
            </TableRow>
            <TableRow
                android:layout_margin="10dp">

                <TextView
                    android:layout_weight=".5"

                    android:text="Employee Name :"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:layout_weight=".5"

                    android:text="Akula Tarak Mani Ravi Teja"
                    android:textStyle="bold"
       />
            </TableRow>
            <TableRow  android:layout_margin="10dp">

                <TextView
                    android:layout_weight=".5"

                    android:text="Date Of Birth :"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
  />

                <TextView
                    android:layout_weight=".5"

                    android:text="21/07/1999"
                    android:textStyle="bold"
               />
            </TableRow>
            <TableRow  android:layout_margin="10dp">

                <TextView
                    android:layout_weight=".5"

                    android:text="Date Of Joining :"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
           />

                <TextView
                    android:layout_weight=".5"

                    android:text="23/08/2021"
                    android:textStyle="bold"
                   />
            </TableRow>
            <TableRow  android:layout_margin="10dp">

                <TextView
                    android:layout_weight=".5"
                    android:paddingLeft="20dp"
                    android:text="Designation :"
                    android:textStyle="bold"
                   />

                <TextView
                    android:layout_weight=".5"

                    android:text="Intern"
                    android:textStyle="bold"
             />
            </TableRow>
        </TableLayout>

