<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/employeeDetailsFrame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragments.EmployeeDetails">

<!--    <ImageView-->
<!--        android:layout_gravity="center_horizontal"/>-->
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
           >
            <TableRow >
                <TextView android:layout_weight=".5"
                    android:gravity="left"
                    android:text="Employee Details"
                    android:textStyle="bold"
                    android:padding="10dp"

                 />
            </TableRow>
            <TableRow
                android:layout_margin="5dp">

                <TextView
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="Employee Code "
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="1126"

                    />
            </TableRow>
            <TableRow
                android:layout_margin="5dp">

                <TextView
                    android:layout_weight=".5"

                    android:text="Employee Name "
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:layout_weight=".5"

                    android:text="Akula Tarak Mani Ravi Teja"

       />
            </TableRow>
            <TableRow  android:layout_margin="5dp">

                <TextView
                    android:layout_weight=".5"

                    android:text="Date Of Birth "
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
  />

                <TextView
                    android:layout_weight=".5"

                    android:text="21/07/1999"

               />
            </TableRow>
            <TableRow  android:layout_margin="5dp">

                <TextView
                    android:layout_weight=".5"

                    android:text="Date Of Joining "
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
           />

                <TextView
                    android:layout_weight=".5"

                    android:text="23/08/2021"

                   />
            </TableRow>
            <TableRow  android:layout_margin="5dp">

                <TextView
                    android:layout_weight=".5"
                    android:paddingLeft="20dp"
                    android:text="Designation "
                    android:textStyle="bold"
                   />

                <TextView
                    android:layout_weight=".5"
                    android:text="Intern"
             />
            </TableRow>
        </TableLayout>



</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"

        android:id="@+id/updateCard"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:gravity="left"
                android:textStyle="bold"
                android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/changeRegime"
            android:paddingHorizontal="30dp"
            android:textStyle="bold"
            />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>